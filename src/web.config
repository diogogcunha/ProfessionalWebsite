<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Set the default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Configure custom error pages -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" prefixLanguageFilePath="" path="/404.html" responseMode="ExecuteURL" />
    </httpErrors>

    <!-- Ensure proper MIME types are served (especially for SVGs and fonts) -->
    <staticContent>
      <remove fileExtension=".svg" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      
      <!-- Optional: Cache static content for 7 days to improve performance -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>

    <!-- URL Rewrite Rules (Requires URL Rewrite Module installed on IIS) -->
    <rewrite>
      <rules>
        <!-- 1. Redirect goncalvesdacunha.com (and www) to diogo.goncalvesdacunha.com -->
        <rule name="Redirect to Subdomain" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAny">
            <add input="{HTTP_HOST}" pattern="^goncalvesdacunha\.com$" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="^www\.goncalvesdacunha\.com$" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://diogo.goncalvesdacunha.com/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- 2. Force HTTPS for the main subdomain -->
        <rule name="Force HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
            <add input="{HTTP_HOST}" pattern="^diogo\.goncalvesdacunha\.com$" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://diogo.goncalvesdacunha.com/{R:1}" appendQueryString="true" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>